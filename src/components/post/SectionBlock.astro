---
import { ReadingProgress } from '@/components/post/ReadingProgress'
interface Props {
  title: string
}

const { title } = Astro.props
---

<!-- 目录组件 -->
<section class="max-h-[450px] flex flex-col pb-4">
  <div class="px-4 pb-2 font-bold uppercase tracking-widest text-xl flex justify-between">
    <span>{title}</span>
    <span class="text-secondary">
      <ReadingProgress client:idle />
    </span>
  </div>
  <slot />
</section>
