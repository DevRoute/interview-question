---
import Layout from './Layout.astro'
import Navbar from '@/components/NavBar/Navbar.astro'

interface Props {
  title?: string
}

const { title = '博客' } = Astro.props
---

<Layout title={title}>
  <Navbar slot="nav" />
  <main class="grid grid-cols-12 gap-4 h-full">
    <!-- 左侧文章列表 -->
    <aside
      class="col-span-2 pt-4 border-r border-gray-200 dark:border-gray-700 h-[calc(100vh-4rem)] overflow-y-auto"
    >
      <slot name="article-list" />
    </aside>

    <!-- 中间文章内容 -->
    <article class="col-span-8 px-6">
      <slot />
    </article>

    <!-- 右侧文章目录 -->
    <aside class="col-span-2 border-l border-gray-200 dark:border-gray-700">
      <div class="sticky top-20">
        <slot name="post-contents" />
      </div>
    </aside>
  </main>
</Layout>
