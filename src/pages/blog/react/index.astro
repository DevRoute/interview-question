---
import BlogLayout from '@/layouts/BlogLayout.astro'
import MarkdownWrapper from '@/components/markdown/MarkdownWrapper.astro'
import { getCollection, render } from 'astro:content'

const posts = await getCollection('react')

const post = posts.find((item) => item.data.isBase)
if (!post) {
  return Astro.redirect('/404')
}

const { headings, Content, remarkPluginFrontmatter } = await render(post)
---

<BlogLayout title="React 教程" type="react" post={post} headings={headings}>
  <MarkdownWrapper>
    <Content />
  </MarkdownWrapper>
</BlogLayout>
