---
import BlogLayout from '@/layouts/BlogLayout.astro'
import ArticleList from '@/components/Blog/ArticleList.astro'
import TableOfContents from '@/components/Blog/TableOfContents.astro'

const articles = [
  {
    title: 'JavaScript基础概念',
    url: '/blog/javascript/basics',
    category: '基础',
  },
  {
    title: '异步编程',
    url: '/blog/javascript/async',
    category: '进阶',
  },
  {
    title: 'ES6+特性',
    url: '/blog/javascript/es6',
    category: '进阶',
  },
]

const tableOfContents = [
  {
    text: '简介',
    slug: 'intro',
    depth: 1,
  },
  {
    text: '为什么学习JavaScript',
    slug: 'why-javascript',
    depth: 2,
  },
  {
    text: 'JavaScript的发展历史',
    slug: 'history',
    depth: 2,
  },
